<UserControl x:Class="TripleTriad.View.Controles.UsuarioConsultaItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding Path=Nome}" FontSize="16" FontWeight="Light"/>
            <TextBlock Text="{Binding Path=Email}" FontSize="11" FontWeight="Light" Margin="0, 4"/>
            
        </StackPanel>
    </Grid>
</UserControl>
